{
    "key": "apryse-gh-live-renderer",
    "name": "Apryse GitHub Code Live Renderer",
    "description": "Live fetch and render GitHub code snippets for embedding in Confluence",
    "version": "1.1.2",
    "baseUrl": "https://dev.tandav.com",
    "vendor": {
        "name": "Apryse",
        "url": "https://dev.tandav.com"
    },
    "authentication": {
        "type": "none"
    },
    "apiMigrations": {
        "gdpr": true
    },
    "apiVersion": 1,
    "links": {
        "documentation": "/documentation.html",
        "self": "/atlassian-connect.json",
        "homepage": "/",
        "support": "/documentation.html#troubleshooting",
        "issues": "/documentation.html#troubleshooting",
        "privacy": "/documentation.html#security-considerations"
    },
    "modules": {
        "dynamicContentMacros": [
            {
                "key": "github-code-macro",
                "name": { "value": "GitHub Code Block" },
                "url": "/macro-view.html",
                "description": { "value": "Live fetch and render code from GitHub repositories" },
                "outputType": "block",
                "bodyType": "none",
                "icon": {
                    "width": 80,
                    "height": 80,
                    "url": "/documentation.html"
                },
                "parameters": [
                    {
                        "identifier": "url",
                        "name": { "value": "GitHub URL" },
                        "description": { "value": "URL to GitHub file" },
                        "type": "string",
                        "required": true
                    },
                    {
                        "identifier": "lines",
                        "name": { "value": "Line Range" },
                        "description": { "value": "Line range to display (e.g., 5-15)" },
                        "type": "string", 
                        "required": false
                    },
                    {
                        "identifier": "theme",
                        "name": { "value": "Theme" },
                        "description": { "value": "Syntax highlighting theme" },
                        "type": "string",
                        "required": false,
                        "defaultValue": "github-light"
                    }
                ],
                "editor": {
                    "url": "/macro-editor.html",
                    "width": "80%",
                    "height": "400px"
                }
            }
        ],
        "generalPages": [
            {
                "key": "documentation",
                "location": "system.help/pages",
                "name": {
                    "value": "GitHub Code Renderer Documentation"
                },
                "url": "/documentation.html"
            }
        ]
    }
} 