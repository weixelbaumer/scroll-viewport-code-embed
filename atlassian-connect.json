{
    "key": "github-code-renderer",
    "name": "Apryse GitHub Code Renderer",
    "description": "Render GitHub code snippets for embedding in Confluence",
    "baseUrl": "https://dev.tandav.com",
    "vendor": {
        "name": "Apryse",
        "url": "https://dev.tandav.com"
    },
    "authentication": {
        "type": "none"
    },
    "apiVersion": 1,
    "modules": {
        "generalPages": [
            {
                "key": "github-code-renderer",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Apryse GitHub Code Renderer"
                },
                "url": "/index.html"
            }
        ],
        "dynamicContentMacros": [
            {
                "key": "github-code-block",
                "name": {
                    "value": "GitHub Code Block"
                },
                "url": "/macro-view.html",
                "description": {
                    "value": "Embed code from GitHub repositories. Renders as a marker for Scroll Viewport."
                },
                "outputType": "block",
                "bodyType": "none",
                "parameters": [
                    {
                        "identifier": "url",
                        "name": {
                            "value": "GitHub File URL"
                        },
                        "description": {
                            "value": "Full URL to the file on GitHub (e.g., https://github.com/user/repo/blob/main/file.js)"
                        },
                        "type": "string",
                        "required": true
                    },
                    {
                        "identifier": "lines",
                        "name": {
                            "value": "Line Range (Optional)"
                        },
                        "description": {
                            "value": "e.g., 5-15 or 10"
                        },
                        "type": "string",
                        "required": false
                    },
                    {
                        "identifier": "theme",
                        "name": {
                            "value": "Theme"
                        },
                        "type": "enum",
                        "values": ["github-light", "github-dark", "monokai", "dracula", "vs2015", "xcode", "atom-one-dark"],
                        "defaultValue": "github-light",
                        "required": false
                    }
                ]
            }
        ]
    }
} 