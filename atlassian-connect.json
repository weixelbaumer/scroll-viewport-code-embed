{
    "key": "com.apryse.github-fetcher",
    "name": "GitHub Code Fetcher",
    "description": "Fetches and displays code from GitHub with syntax highlighting.",
    "version": "1.1.14",
    "baseUrl": "https://dev.tandav.com",
    "vendor": {
        "name": "Apryse",
        "url": "https://apryse.com"
    },
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "apiMigrations": {
        "gdpr": true
    },
    "apiVersion": 1,
    "links": {
        "documentation": "/documentation.html",
        "self": "/atlassian-connect.json",
        "homepage": "/",
        "support": "/documentation.html#troubleshooting",
        "issues": "/documentation.html#troubleshooting",
        "privacy": "/documentation.html#security-considerations"
    },
    "modules": {
        "dynamicContentMacros": [
            {
                "key": "github-code-macro",
                "name": {
                    "value": "GitHub Code Block"
                },
                "description": {
                    "value": "Embeds and syntax highlights code from a GitHub URL."
                },
                "url": "https://dev.tandav.com/app/render-github-macro?url={macro.parameter.url}&lines={macro.parameter.lines}&theme={macro.parameter.theme}",
                "outputType": "block",
                "bodyType": "none",
                "icon": {
                    "width": 64,
                    "height": 64,
                    "url": "/images/github.svg"
                },
                "parameters": [
                    {
                        "identifier": "url",
                        "name": {
                            "value": "GitHub URL"
                        },
                        "description": {
                            "value": "The full URL to the file on GitHub (e.g., https://github.com/user/repo/blob/main/file.js)"
                        },
                        "type": "string",
                        "required": true
                    },
                    {
                        "identifier": "lines",
                        "name": {
                            "value": "Line Range (Optional)"
                        },
                        "description": {
                            "value": "Specify a line range (e.g., 10-20 or 15). Leave empty for the whole file."
                        },
                        "type": "string",
                        "required": false
                    },
                    {
                        "identifier": "theme",
                        "name": {
                            "value": "Theme"
                        },
                        "description": {
                            "value": "Select the syntax highlighting theme."
                        },
                        "type": "enum",
                        "required": false,
                        "defaultValue": "github-light",
                        "values": [
                            "github-light",
                            "github-dark",
                            "monokai",
                            "dracula",
                            "vs2015",
                            "xcode",
                            "atom-one-dark"
                        ]
                    }
                ],
                "editor": {
                    "url": "/macro-editor.html",
                    "width": "600px",
                    "height": "450px",
                    "editTitle": {
                        "value": "Edit GitHub Code Block"
                    },
                    "insertTitle": {
                        "value": "Insert GitHub Code Block"
                    }
                }
            }
        ],
        "generalPages": [
            {
                "key": "documentation",
                "location": "system.help/pages",
                "name": {
                    "value": "GitHub Code Renderer Documentation"
                },
                "url": "/documentation.html"
            }
        ]
    }
}