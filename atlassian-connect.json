{
    "key": "com.apryse.github-fetcher",
    "name": "GitHub Fetcher",
    "description": "Renders code snippets from GitHub with syntax highlighting for Scroll Viewport",
    "version": "1.1.4",
    "baseUrl": "https://dev.tandav.com",
    "vendor": {
        "name": "Apryse",
        "url": "https://dev.tandav.com"
    },
    "authentication": {
        "type": "none"
    },
    "apiMigrations": {
        "gdpr": true
    },
    "apiVersion": 1,
    "links": {
        "documentation": "/documentation.html",
        "self": "/atlassian-connect.json",
        "homepage": "/",
        "support": "/documentation.html#troubleshooting",
        "issues": "/documentation.html#troubleshooting",
        "privacy": "/documentation.html#security-considerations"
    },
    "modules": {
        "dynamicContentMacros": [
            {
                "key": "github-code-macro",
                "name": { 
                    "value": "GitHub Code Block" 
                },
                "url": "/macro-view.html",
                "description": { 
                    "value": "Live fetch and render code from GitHub repositories" 
                },
                "outputType": "block",
                "bodyType": "none",
                "placeholderUrl": "/macro-view.html",
                "icon": {
                    "width": 64,
                    "height": 64,
                    "url": "/images/github.svg"
                },
                "parameters": [
                    {
                        "identifier": "url",
                        "name": { 
                            "value": "GitHub URL" 
                        },
                        "description": { 
                            "value": "URL to GitHub file" 
                        },
                        "type": "string",
                        "required": true
                    },
                    {
                        "identifier": "lines",
                        "name": { 
                            "value": "Line Range" 
                        },
                        "description": { 
                            "value": "Line range to display (e.g., 5-15)" 
                        },
                        "type": "string", 
                        "required": false
                    },
                    {
                        "identifier": "theme",
                        "name": { 
                            "value": "Theme" 
                        },
                        "description": { 
                            "value": "Syntax highlighting theme" 
                        },
                        "type": "string",
                        "required": false,
                        "defaultValue": "github-light"
                    }
                ],
                "editor": {
                    "url": "/macro-editor.html",
                    "width": "80%",
                    "height": "400px",
                    "editTitle": {
                        "value": "Edit GitHub Code Block"
                    },
                    "insertTitle": {
                        "value": "Insert GitHub Code Block"
                    }
                }
            }
        ],
        "generalPages": [
            {
                "key": "documentation",
                "location": "system.help/pages",
                "name": {
                    "value": "GitHub Code Renderer Documentation"
                },
                "url": "/documentation.html"
            }
        ]
    }
} 