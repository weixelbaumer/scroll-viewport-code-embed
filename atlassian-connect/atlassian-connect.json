{
    "name": "GitHub Code Renderer",
    "description": "Renders code snippets from GitHub with syntax highlighting for Scroll Viewport",
    "key": "com.apryse.github-code-renderer",
    "baseUrl": "https://dev.tandav.com",
    "requestHeaders": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/92.0.4515.131 Safari/537.36",
        "X-Requested-With": "XMLHttpRequest"
    },
    "vendor": {
        "name": "Apryse",
        "url": "https://apryse.com"
    },
    "authentication": {
        "type": "none"
    },
    "apiVersion": 1,
    "modules": {
        "dynamicContentMacros": [
            {
                "key": "github-code-macro",
                "name": {
                    "value": "GitHub Code"
                },
                "url": "/atlassian-connect/macro/editor-bypass",
                "description": {
                    "value": "Display code from GitHub with syntax highlighting"
                },
                "outputType": "block",
                "bodyType": "none",
                "renderModes": {
                    "default": {
                        "url": "/atlassian-connect/macro/render-bypass"
                    }
                },
                "editor": {
                    "url": "/atlassian-connect/macro/editor-bypass",
                    "editTitle": {
                        "value": "Configure GitHub Code Snippet"
                    },
                    "width": "80%",
                    "height": "80%"
                },
                "icon": {
                    "url": "/atlassian-connect/github-icon.png",
                    "width": 80,
                    "height": 80
                },
                "documentation": {
                    "url": "/scroll-viewport"
                },
                "categories": [
                    "formatting",
                    "development-tools"
                ],
                "parameters": [
                    {
                        "identifier": "url",
                        "name": {
                            "value": "url"
                        },
                        "title": "GitHub URL",
                        "description": {
                            "value": "The full GitHub URL to the file (e.g., https://github.com/itext/itext-publications-examples-java/blob/develop/src/main/java/com/itextpdf/samples/htmlsamples/chapter01/C01E02_HelloWorld.java)"
                        },
                        "type": "string",
                        "required": true
                    },
                    {
                        "identifier": "lines",
                        "name": {
                            "value": "lines"
                        },
                        "title": "Line Range",
                        "description": {
                            "value": "Specific lines to display (e.g., 10-20)"
                        },
                        "type": "string",
                        "required": false
                    },
                    {
                        "identifier": "theme",
                        "name": {
                            "value": "theme"
                        },
                        "title": "Theme",
                        "description": {
                            "value": "Syntax highlighting theme"
                        },
                        "type": "enum",
                        "required": false,
                        "defaultValue": "github",
                        "enumValues": [
                            {
                                "value": "github",
                                "label": "GitHub Light"
                            },
                            {
                                "value": "github-dark",
                                "label": "GitHub Dark"
                            },
                            {
                                "value": "monokai",
                                "label": "Monokai"
                            },
                            {
                                "value": "atom-one-dark",
                                "label": "Atom One Dark"
                            },
                            {
                                "value": "vs2015",
                                "label": "VS2015"
                            },
                            {
                                "value": "xcode",
                                "label": "Xcode"
                            },
                            {
                                "value": "dracula",
                                "label": "Dracula"
                            }
                        ]
                    },
                    {
                        "identifier": "repository",
                        "name": {
                            "value": "repository"
                        },
                        "title": "[Deprecated] Repository",
                        "description": {
                            "value": "Deprecated: Use the GitHub URL field instead"
                        },
                        "type": "string",
                        "required": false,
                        "hidden": true
                    },
                    {
                        "identifier": "path",
                        "name": {
                            "value": "path"
                        },
                        "title": "[Deprecated] Path",
                        "description": {
                            "value": "Deprecated: Use the GitHub URL field instead"
                        },
                        "type": "string",
                        "required": false,
                        "hidden": true
                    },
                    {
                        "identifier": "branch",
                        "name": {
                            "value": "branch"
                        },
                        "title": "[Deprecated] Branch",
                        "description": {
                            "value": "Deprecated: Use the GitHub URL field instead"
                        },
                        "type": "string",
                        "required": false,
                        "hidden": true
                    }
                ]
            }
        ]
    }
}